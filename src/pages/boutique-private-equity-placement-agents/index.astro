// Fetch all placement agents, focusing on smaller/boutique firms
// Boutique firms are typically characterized by:
// - Specialized focus (regional, asset class, or stage)
// - Smaller team size
// - More personalized service
// We'll show all firms and let content/filtering help users identify boutique characteristics
const companies = await sql`
  SELECT
    id,
    name,
    COALESCE(display_name, name) as display_name,
    slug,
    description,
    featured_asset_url,
    headquarters,
    logo_url,
    specializations,
    global_rank,
    primary_country,
    primary_region,
    payload
  FROM companies
  WHERE company_type = 'placement_agent'
    AND status = 'published'
  ORDER BY
    name ASC
`;

// Separate companies into those with boutique characteristics vs larger firms
const boutiqueCompanies = companies.filter((c: any) => {
  // Boutique indicators: no global rank (smaller firm), or rank > 20
  return !c.global_rank || c.global_rank > 20;
});

const largerFirms = companies.filter((c: any) => {
  return c.global_rank && c.global_rank <= 20;
});

// Show boutique firms first, then larger firms
const sortedCompanies = [...boutiqueCompanies, ...largerFirms];
