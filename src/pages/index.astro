  <script define:vars={{ heroPlaybackId }}>
    document.addEventListener('DOMContentLoaded', function() {
      // Load HLS.js first
      const hlsScript = document.createElement('script');
      hlsScript.src = 'https://cdn.jsdelivr.net/npm/hls.js@latest';
      hlsScript.onload = initializeVideos;
      document.head.appendChild(hlsScript);

      function initializeVideos() {
        // Hero video
        const heroVideo = document.getElementById('hero-video');
        if (heroVideo) {
          loadHlsVideo(heroVideo, heroPlaybackId);
        }

        // Thumbnail videos - play on hover
        const newsItems = document.querySelectorAll('.news-item');
        newsItems.forEach(item => {
          const video = item.querySelector('.thumb-video');
          const img = item.querySelector('.thumb-img');
          if (!video) return;

          const playbackId = video.dataset.playbackId;
          let hlsInstance = null;
          let loaded = false;

          item.addEventListener('mouseenter', () => {
            if (!loaded && playbackId) {
              loaded = true;
              loadHlsVideo(video, playbackId, () => {
                video.style.opacity = '1';
                if (img) img.style.opacity = '0';
                video.play().catch(() => {});
              });
            } else if (loaded) {
              video.style.opacity = '1';
              if (img) img.style.opacity = '0';
              video.play().catch(() => {});
            }
          });

          item.addEventListener('mouseleave', () => {
            video.style.opacity = '0';
            if (img) img.style.opacity = '1';
            video.pause();
          });
        });
      }

      function loadHlsVideo(video, playbackId, onReady) {
        const src = `https://stream.mux.com/${playbackId}.m3u8`;

        if (video.canPlayType('application/vnd.apple.mpegurl')) {
          video.src = src;
          video.addEventListener('loadeddata', () => {
            if (onReady) onReady();
            else video.play().catch(() => {});
          }, { once: true });
        } else if (typeof Hls !== 'undefined' && Hls.isSupported()) {
          const hls = new Hls({ maxBufferLength: 5 });
          hls.loadSource(src);
          hls.attachMedia(video);
          hls.on(Hls.Events.MANIFEST_PARSED, () => {
            if (onReady) onReady();
            else video.play().catch(() => {});
          });
        }
      }
    });
