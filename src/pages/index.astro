// Image optimization helpers for mobile performance
function optimizeCloudinaryImage(url: string, width: number = 800) {
  if (!url || !url.includes('cloudinary.com')) return url;
  // f_auto = WebP/AVIF, q_60 = 60% quality (aggressive compression), w_X = max width, c_limit = don't upscale
  const transformations = `f_auto,q_60,w_${width},c_limit`;
  return url.replace('/upload/', `/upload/${transformations}/`);
}

function generateSrcSet(url: string) {
  if (!url || !url.includes('cloudinary.com')) return '';
  const widths = [400, 600, 800];
  return widths.map(w => `${optimizeCloudinaryImage(url, w)} ${w}w`).join(', ');
}

// Optimize Unsplash images
function optimizeUnsplashImage(url: string, width: number = 1200, quality: number = 40) {
  if (!url || !url.includes('unsplash.com')) return url;
  // Add WebP format, compression, and proper sizing
  const params = `w=${width}&q=${quality}&auto=format&fit=crop&fm=webp`;
  return url.includes('?') ? `${url.split('?')[0]}?${params}` : `${url}?${params}`;
}

function generateUnsplashSrcSet(url: string) {
  if (!url || !url.includes('unsplash.com')) return '';
  const widths = [400, 800, 1200];
  return widths.map(w => `${optimizeUnsplashImage(url, w, 40)} ${w}w`).join(', ');
}

// Generate varied descriptions to avoid duplicate content
function generateVariedDescription(company: any, context: 'primary' | 'secondary' = 'primary'): string {
  if (context === 'primary') {
    // Use original description for primary display
    return company.description || '';
  }

  // Generate unique secondary descriptions focusing on different aspects
  const specs = company.specializations || [];
  const region = company.primary_region || company.primary_country || '';
  const rank = company.global_rank;

  // Create varied taglines based on company data - expanded for better uniqueness
  const templates = [
    `Specialized ${specs[0] || 'private markets'} advisory with ${region ? region + ' ' : ''}expertise in capital formation and fundraising`,
    `Independent advisory firm serving ${specs.slice(0, 2).join(' and ') || 'private markets'} fund managers globally`,
    `Leading placement services for ${specs[0] || 'alternative asset'} managers seeking institutional capital`,
    `Global network connecting ${specs[0] || 'private equity'} funds with institutional investors worldwide`,
    `Expert fundraising solutions for ${specs.join(', ') || 'alternative investment'} strategies`,
    `Trusted ${region ? region + ' ' : ''}partner for ${specs[0] || 'PE'} fund managers navigating institutional allocations`,
    `Specialized advisor bridging ${specs[0] || 'private equity'} managers with pension funds and endowments`,
    `${region ? region + '-based ' : ''}placement firm with deep expertise in ${specs.slice(0, 2).join(' and ') || 'alternative assets'}`,
    `Strategic fundraising counsel for ${specs[0] || 'alternative'} managers targeting sophisticated LP relationships`,
    `Boutique advisory delivering tailored ${specs[0] || 'private markets'} capital raising across ${region || 'global'} networks`,
    `Experienced ${specs[0] || 'PE'} fundraising team with proven institutional investor access`,
    `Full-service placement agent offering ${specs.join(', ') || 'private equity'} distribution capabilities`,
  ];

  // Select template based on company name hash for consistency
  const hash = company.name.split('').reduce((acc: number, char: string) => acc + char.charCodeAt(0), 0);
  return templates[hash % templates.length];
}
