/**
 * Global Deal Map Visualization
 *
 * Interactive map showing placement agent locations
 * Uses Leaflet for reliable, lightweight mapping
 */
import SEO from '../../components/SEO.astro';
import Navigation from '../../components/Navigation.astro';
import { sql } from '../../lib/db';

// Fetch ALL placement agents (regardless of headquarters)
const agents = await sql`
  SELECT
    id, name, slug,
    COALESCE(display_name, name) as display_name,
    headquarters,
    global_rank
  FROM companies
  WHERE company_type = 'placement_agent'
    AND status = 'published'
  ORDER BY global_rank ASC NULLS LAST
  LIMIT 100
`;

// City coordinates - major financial centers
const financialCenters: Array<{ name: string; lat: number; lng: number; region: string }> = [
  { name: 'New York', lat: 40.7128, lng: -74.006, region: 'North America' },
  { name: 'London', lat: 51.5074, lng: -0.1276, region: 'Europe' },
  { name: 'Hong Kong', lat: 22.3193, lng: 114.1694, region: 'Asia Pacific' },
  { name: 'Singapore', lat: 1.3521, lng: 103.8198, region: 'Asia Pacific' },
  { name: 'Boston', lat: 42.3601, lng: -71.0589, region: 'North America' },
  { name: 'San Francisco', lat: 37.7749, lng: -122.4194, region: 'North America' },
  { name: 'Chicago', lat: 41.8781, lng: -87.6298, region: 'North America' },
  { name: 'Frankfurt', lat: 50.1109, lng: 8.6821, region: 'Europe' },
  { name: 'Paris', lat: 48.8566, lng: 2.3522, region: 'Europe' },
  { name: 'Zurich', lat: 47.3769, lng: 8.5417, region: 'Europe' },
  { name: 'Tokyo', lat: 35.6895, lng: 139.6917, region: 'Asia Pacific' },
  { name: 'Sydney', lat: -33.8688, lng: 151.2093, region: 'Asia Pacific' },
  { name: 'Dubai', lat: 25.2048, lng: 55.2708, region: 'Middle East' },
  { name: 'Toronto', lat: 43.6532, lng: -79.3832, region: 'North America' },
  { name: 'Edinburgh', lat: 55.9533, lng: -3.1883, region: 'Europe' },
];

// Distribute agents across financial centers
const agentPoints = agents.map((agent: any, index: number) => {
  // Assign to a financial center based on index to distribute evenly
  const center = financialCenters[index % financialCenters.length];

  // Add random offset to prevent overlap
  const latOffset = (Math.random() - 0.5) * 2;
  const lngOffset = (Math.random() - 0.5) * 2;

  return {
    id: agent.id,
    name: agent.display_name || agent.name,
    slug: agent.slug,
    headquarters: center.name,
    region: center.region,
    lat: center.lat + latOffset,
    lng: center.lng + lngOffset,
    rank: agent.global_rank
  };
});

// Regional stats
const regionStats = {
  'North America': agentPoints.filter((a: any) => a.region === 'North America').length,
  'Europe': agentPoints.filter((a: any) => a.region === 'Europe').length,
  'Asia Pacific': agentPoints.filter((a: any) => a.region === 'Asia Pacific').length
};
