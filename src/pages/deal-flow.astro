/**
 * Deal Flow - Follow the Money
 *
 * Track private equity deals, fundraises, and capital movements
 * extracted from placement agent news.
 */
import SEO from '../components/SEO.astro';
import Navigation from '../components/Navigation.astro';
import { sql } from '../lib/db';

// Deal type configuration
const dealTypes: Record<string, { label: string; icon: string; color: string }> = {
  acquisition: { label: 'Acquisition', icon: 'ðŸ¢', color: '#ef4444' },
  fund_raise: { label: 'Fund Raise', icon: 'ðŸ’°', color: '#10b981' },
  fund_close: { label: 'Fund Close', icon: 'âœ…', color: '#22c55e' },
  investment: { label: 'Investment', icon: 'ðŸ“ˆ', color: '#3b82f6' },
  exit: { label: 'Exit', icon: 'ðŸšª', color: '#8b5cf6' },
  ipo: { label: 'IPO', icon: 'ðŸ“Š', color: '#f59e0b' },
  merger: { label: 'Merger', icon: 'ðŸ¤', color: '#ec4899' }
};

// Fetch deals from database
const deals = await sql`
  SELECT d.*, c.name as agent_name, c.slug as agent_slug,
    a.slug as article_slug, a.featured_asset_url, a.video_playback_id
  FROM deals d
  LEFT JOIN companies c ON d.placement_agent_id = c.id
  LEFT JOIN articles a ON d.article_id = a.id
  ORDER BY d.deal_date DESC NULLS LAST, d.created_at DESC
  LIMIT 100
`;

// Also fetch deal-related articles if no structured deals exist
const dealArticles = await sql`
  SELECT id, title, slug, excerpt, published_at, created_at,
    featured_asset_url, video_playback_id, payload
  FROM articles
  WHERE app = 'placement' AND status = 'published'
    AND (
      title ILIKE '%acqui%' OR title ILIKE '%merger%' OR
      title ILIKE '%raises%' OR title ILIKE '%closes%' OR
      title ILIKE '%fund%' OR title ILIKE '%investment%' OR
      title ILIKE '%deal%' OR title ILIKE '%billion%' OR title ILIKE '%million%'
    )
  ORDER BY COALESCE(published_at, created_at) DESC
  LIMIT 50
`;

// Extract deal value from title
function extractDealValue(title: string): { value: number | null; currency: string } {
  const patterns = [
    /\$(\d+(?:\.\d+)?)\s*(billion|bn|b)/i,
    /\$(\d+(?:\.\d+)?)\s*(million|mm|m)/i,
    /â‚¬(\d+(?:\.\d+)?)\s*(billion|bn|b)/i,
    /â‚¬(\d+(?:\.\d+)?)\s*(million|mm|m)/i,
    /Â£(\d+(?:\.\d+)?)\s*(billion|bn|b)/i,
    /Â£(\d+(?:\.\d+)?)\s*(million|mm|m)/i
  ];

  for (const pattern of patterns) {
    const match = title.match(pattern);
    if (match) {
      let value = parseFloat(match[1]);
      const unit = match[2].toLowerCase();
      if (unit.startsWith('b')) value *= 1000; // Convert billions to millions
      const currency = match[0].startsWith('â‚¬') ? 'EUR' : match[0].startsWith('Â£') ? 'GBP' : 'USD';
      return { value, currency };
    }
  }
  return { value: null, currency: 'USD' };
}

// Determine deal type from title
function getDealType(title: string): string {
  const lower = title.toLowerCase();
  if (lower.includes('acqui') || lower.includes('buyout')) return 'acquisition';
  if (lower.includes('merger') || lower.includes('merges')) return 'merger';
  if (lower.includes('closes') || lower.includes('final close')) return 'fund_close';
  if (lower.includes('raises') || lower.includes('raising') || lower.includes('launch')) return 'fund_raise';
  if (lower.includes('exit') || lower.includes('sells') || lower.includes('divest')) return 'exit';
  if (lower.includes('ipo') || lower.includes('public')) return 'ipo';
  if (lower.includes('invest') || lower.includes('backs')) return 'investment';
  return 'investment';
}

// Process articles into deal-like objects
const processedDeals = dealArticles.map((article: any) => {
  const { value, currency } = extractDealValue(article.title);
  const dealType = getDealType(article.title);

  return {
    id: article.id,
    headline: article.title,
    deal_type: dealType,
    deal_value: value,
    currency,
    article_slug: article.slug,
    deal_date: article.published_at || article.created_at,
    featured_asset_url: article.featured_asset_url,
    video_playback_id: article.video_playback_id,
    excerpt: article.excerpt
  };
});

// Combine structured deals with processed articles
const allDeals = [...deals, ...processedDeals.filter((pd: any) =>
  !deals.some((d: any) => d.article_id === pd.id)
)];

// Calculate totals
const totalValue = allDeals.reduce((sum: number, d: any) => sum + (d.deal_value || 0), 0);
const dealCounts = allDeals.reduce((acc: any, d: any) => {
  acc[d.deal_type] = (acc[d.deal_type] || 0) + 1;
  return acc;
}, {});

// Format currency
function formatValue(value: number | null, currency: string): string {
  if (!value) return 'Undisclosed';
  const symbol = currency === 'EUR' ? 'â‚¬' : currency === 'GBP' ? 'Â£' : '$';
  if (value >= 1000) return `${symbol}${(value / 1000).toFixed(1)}B`;
  return `${symbol}${value.toFixed(0)}M`;
}

// Format date
function formatDate(date: string | Date | null): string {
  if (!date) return '';
  return new Date(date).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' });
}

// Get thumbnail
function getThumbnail(deal: any): string | null {
  if (deal.video_playback_id) {
    return `https://image.mux.com/${deal.video_playback_id}/thumbnail.webp?time=1&width=200`;
  }
  return deal.featured_asset_url || null;
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <SEO
    title="Deal Flow | Follow the Money in Private Equity"
    description="Track private equity deals, fundraises, and capital movements. Real-time deal flow from placement agent activity."
  />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #0a0a0f;
      color: #fff;
      line-height: 1.6;
    }

    .page-container {
      min-height: 100vh;
      padding-top: 80px;
    }

    /* Header */
    .header-section {
      background: linear-gradient(135deg, #1e3a5f 0%, #0f172a 100%);
      padding: 48px 20px 40px;
      color: #fff;
    }

    .header-inner {
      max-width: 1200px;
      margin: 0 auto;
    }

    .header-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: rgba(255,255,255,0.1);
      border: 1px solid rgba(255,255,255,0.2);
      padding: 6px 14px;
      border-radius: 100px;
      font-size: 12px;
      color: rgba(255,255,255,0.9);
      margin-bottom: 16px;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 8px;
      letter-spacing: -0.02em;
    }

    .subtitle {
      color: rgba(255,255,255,0.7);
      font-size: 1.1rem;
      max-width: 600px;
    }

    /* Stats Row */
    .stats-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 16px;
      margin-top: 32px;
    }

    .stat-card {
      background: rgba(255,255,255,0.1);
      border: 1px solid rgba(255,255,255,0.15);
      border-radius: 12px;
      padding: 20px;
      text-align: center;
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 800;
      color: #10b981;
    }

    .stat-label {
      font-size: 12px;
      color: rgba(255,255,255,0.6);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-top: 4px;
    }

    /* Main Content */
    .main-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 32px 20px;
    }

    /* Filter Row */
    .filter-row {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-bottom: 24px;
    }

    .filter-pill {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 100px;
      padding: 10px 18px;
      font-size: 13px;
      color: rgba(255,255,255,0.8);
      cursor: pointer;
      transition: all 0.2s;
      font-weight: 500;
    }

    .filter-pill:hover {
      border-color: #818cf8;
      color: #818cf8;
    }

    .filter-pill.active {
      background: #f97316;
      border-color: #f97316;
      color: #fff;
    }

    .filter-pill .count {
      background: rgba(255,255,255,0.1);
      padding: 2px 8px;
      border-radius: 100px;
      font-size: 11px;
      font-weight: 600;
    }

    .filter-pill.active .count {
      background: rgba(255,255,255,0.2);
    }

    /* Deal Cards */
    .deals-grid {
      display: grid;
      gap: 16px;
    }

    .deal-card {
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 16px;
      padding: 24px;
      display: grid;
      grid-template-columns: auto 1fr auto;
      gap: 20px;
      align-items: start;
      transition: all 0.2s;
    }

    .deal-card:hover {
      box-shadow: 0 8px 24px rgba(0,0,0,0.3);
      transform: translateY(-2px);
      border-color: rgba(255,255,255,0.15);
    }

    .deal-icon {
      width: 56px;
      height: 56px;
      border-radius: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 28px;
      background: rgba(255,255,255,0.05);
    }

    .deal-content {
      min-width: 0;
    }

    .deal-type-badge {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 4px 10px;
      border-radius: 6px;
      margin-bottom: 8px;
    }

    .deal-headline {
      font-size: 18px;
      font-weight: 700;
      color: #fff;
      line-height: 1.4;
      margin-bottom: 8px;
    }

    .deal-headline a {
      color: inherit;
      text-decoration: none;
    }

    .deal-headline a:hover {
      color: #818cf8;
    }

    .deal-excerpt {
      font-size: 14px;
      color: rgba(255,255,255,0.6);
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      margin-bottom: 12px;
    }

    .deal-meta {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      font-size: 13px;
      color: rgba(255,255,255,0.5);
    }

    .deal-meta-item {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .deal-meta-item svg {
      width: 14px;
      height: 14px;
      color: rgba(255,255,255,0.4);
    }

    .deal-value {
      text-align: right;
    }

    .deal-amount {
      font-size: 24px;
      font-weight: 800;
      color: #10b981;
      line-height: 1.2;
    }

    .deal-currency {
      font-size: 12px;
      color: rgba(255,255,255,0.5);
      text-transform: uppercase;
    }

    .deal-thumbnail {
      width: 140px;
      height: 90px;
      border-radius: 10px;
      object-fit: cover;
      flex-shrink: 0;
    }

    /* Timeline indicator */
    .deal-card::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 4px;
      height: 60%;
      border-radius: 0 4px 4px 0;
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 80px 20px;
      background: rgba(255,255,255,0.03);
      border: 1px dashed rgba(255,255,255,0.15);
      border-radius: 16px;
    }

    .empty-state svg {
      width: 64px;
      height: 64px;
      color: rgba(255,255,255,0.3);
      margin-bottom: 20px;
    }

    .empty-state h3 {
      font-size: 20px;
      font-weight: 700;
      color: #fff;
      margin-bottom: 8px;
    }

    .empty-state p {
      color: rgba(255,255,255,0.6);
      font-size: 15px;
      max-width: 400px;
      margin: 0 auto;
    }

    /* Provenance */
    .provenance {
      text-align: center;
      padding: 32px;
      font-size: 12px;
      color: rgba(255,255,255,0.5);
    }

    /* Mobile */
    @media (max-width: 768px) {
      h1 { font-size: 1.75rem; }
      .deal-card {
        grid-template-columns: 1fr;
      }
      .deal-icon {
        width: 48px;
        height: 48px;
        font-size: 22px;
      }
      .deal-value {
        text-align: left;
        margin-top: 12px;
      }
      .deal-thumbnail {
        display: none;
      }
    }
  </style>
</head>
<body>
  <Navigation />

  <div class="page-container">
    <div class="header-section">
      <div class="header-inner">
        <div class="header-badge">
          <svg style="width: 14px; height: 14px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Follow the Money
        </div>
        <h1>Deal Flow</h1>
        <p class="subtitle">Track private equity deals, fundraises, and capital movements across the placement agent landscape.</p>

        <div class="stats-row">
          <div class="stat-card">
            <div class="stat-value">{allDeals.length}</div>
            <div class="stat-label">Total Deals</div>
          </div>
          <div class="stat-card">
            <div class="stat-value">{formatValue(totalValue, 'USD')}</div>
            <div class="stat-label">Deal Volume</div>
          </div>
          <div class="stat-card">
            <div class="stat-value">{dealCounts.fund_raise || 0}</div>
            <div class="stat-label">Fund Raises</div>
          </div>
          <div class="stat-card">
            <div class="stat-value">{dealCounts.acquisition || 0}</div>
            <div class="stat-label">Acquisitions</div>
          </div>
        </div>
      </div>
    </div>

    <div class="main-content">
      <!-- Filter Pills -->
      <div class="filter-row">
        <button class="filter-pill active" data-type="all">
          All Deals
          <span class="count">{allDeals.length}</span>
        </button>
        {Object.entries(dealTypes).map(([type, config]) => (
          <button class="filter-pill" data-type={type}>
            <span>{config.icon}</span>
            {config.label}
            {dealCounts[type] && <span class="count">{dealCounts[type]}</span>}
          </button>
        ))}
      </div>

      <!-- Deals Grid -->
      {allDeals.length > 0 ? (
        <div class="deals-grid" id="deals-grid">
          {allDeals.map((deal: any) => {
            const config = dealTypes[deal.deal_type] || { label: 'Deal', icon: 'ðŸ“Š', color: '#6b7280' };
            const thumb = getThumbnail(deal);

            return (
              <div class="deal-card" data-deal-type={deal.deal_type}>
                <div class="deal-icon" style={`background: ${config.color}15;`}>
                  {config.icon}
                </div>

                <div class="deal-content">
                  <div class="deal-type-badge" style={`background: ${config.color}15; color: ${config.color};`}>
                    {config.label}
                  </div>

                  <h3 class="deal-headline">
                    {deal.article_slug ? (
                      <a href={`/${deal.article_slug}`}>{deal.headline}</a>
                    ) : (
                      deal.headline
                    )}
                  </h3>

                  {deal.excerpt && (
                    <p class="deal-excerpt">{deal.excerpt}</p>
                  )}

                  <div class="deal-meta">
                    {deal.deal_date && (
                      <span class="deal-meta-item">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        {formatDate(deal.deal_date)}
                      </span>
                    )}
                    {deal.agent_name && (
                      <a href={`/private-equity-placement-agents-list/${deal.agent_slug}`} class="deal-meta-item" style="color: #4f46e5;">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        {deal.agent_name}
                      </a>
                    )}
                    {deal.region && (
                      <span class="deal-meta-item">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945"></path>
                        </svg>
                        {deal.region}
                      </span>
                    )}
                  </div>
                </div>

                <div class="deal-value">
                  <div class="deal-amount">{formatValue(deal.deal_value, deal.currency || 'USD')}</div>
                  {deal.deal_value && <div class="deal-currency">{deal.currency || 'USD'}</div>}
                </div>
              </div>
            );
          })}
        </div>
      ) : (
        <div class="empty-state">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3>No Deals Tracked Yet</h3>
          <p>Deal information is extracted from news articles. New deals will appear here as they're published.</p>
        </div>
      )}

      <div class="provenance">
        Deal data extracted from Placement Quest news articles.
        Last updated: {new Date().toLocaleDateString()}
      </div>
    </div>
  </div>

  <script>
    const filterPills = document.querySelectorAll('.filter-pill');
    const dealCards = document.querySelectorAll('.deal-card');

    filterPills.forEach(pill => {
      pill.addEventListener('click', () => {
        filterPills.forEach(p => p.classList.remove('active'));
        pill.classList.add('active');

        const type = pill.getAttribute('data-type');

        dealCards.forEach(card => {
          if (type === 'all' || card.getAttribute('data-deal-type') === type) {
            (card as HTMLElement).style.display = 'grid';
          } else {
            (card as HTMLElement).style.display = 'none';
          }
        });
      });
    });
  </script>
</body>
</html>
