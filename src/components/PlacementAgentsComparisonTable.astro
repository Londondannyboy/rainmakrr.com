      <table class="comparison-table" style="width: 100%; border-collapse: collapse; min-width: 1400px;">
        <thead>
          <tr style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%); border-bottom: 2px solid rgba(102, 126, 234, 0.4);">
