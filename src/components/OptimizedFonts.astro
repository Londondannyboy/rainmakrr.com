---
// Optimized Google Fonts using astro-font
// Reduced from 7 weights (219KB) to 4 weights (~100KB)
import { AstroFont } from "astro-font";
---

<AstroFont
  config={[
    {
      src: [],
      name: "Inter",
      googleFontsURL: 'https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap',
      preload: true,
      display: "swap",
      selector: "body",
      fallback: "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
    },
  ]}
/>
